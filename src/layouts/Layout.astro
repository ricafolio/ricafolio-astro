---
import { Tooltips } from 'astro-tooltips';

const { doIndex } = Astro.props;
const title = "Ricafolio"
const pageTitle = "ricafolio / web developer"
const description = "Hi! 👋 I'm Rica, a web designer & developer from Philippines. Passionate about creating visually stunning and user-friendly websites."
const url = "https://ricafolio.me"
const fontshareUrl = "https://api.fontshare.com"
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		{doIndex && <meta name="robots" content="noindex">}
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="title" content={title}>
		<meta name="description" content={description}>
		<meta property="og:type" content="website">
		<meta property="og:title" content={title}/>
		<meta name="og:description" content={description}>
		<meta property="og:image" content="/og_img.png">
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:site" content={url}>
  	<meta name="twitter:url" content={url}>
		<meta name="twitter:title" content={title}>
		<meta name="twitter:description" content={description}>
		<link rel="preconnect" href={fontshareUrl} />
		<link rel="dns-prefetch" href={fontshareUrl} />
		<link href="https://api.fontshare.com/v2/css?f[]=clash-display@600,500&f[]=satoshi@700,500,400&display=swap" rel="stylesheet">
		<Tooltips interactive={false} delay={[1, 10]} placement="top" />
		<title>{pageTitle}</title>
	</head>
	<body >
		<slot />
		<div id="tsparticles"></div>
		<script type="text/plain">
	┏━━━┓╋╋╋╋╋╋╋┏━┓╋╋┏┓
	┃┏━┓┃╋╋╋╋╋╋╋┃┏┛╋╋┃┃ ^__^
	┃┗━┛┣┳━━┳━━┳┛┗┳━━┫┃┏┳━━┓
	┃┏┓┏╋┫┏━┫┏┓┣┓┏┫┏┓┃┃┣┫┏┓┃
	┃┃┃┗┫┃┗━┫┏┓┃┃┃┃┗┛┃┗┫┃┗┛┃
	┗┛┗━┻┻━━┻┛┗┛┗┛┗━━┻━┻┻━━┛
		</script>
	</body>
</html>

<script is:inline src="https://cdn.jsdelivr.net/npm/tsparticles@2.8.0/tsparticles.bundle.min.js"></script>
<script is:inline src="https://cdn.jsdelivr.net/npm/tsparticles-preset-firefly@2/tsparticles.preset.firefly.bundle.min.js"></script>

<script>
(async () => {
  await loadFireflyPreset(tsParticles); // this is required only if you are not using the bundle script

  await tsParticles.load("tsparticles", {
    preset: "firefly",
		particles: {
			color: {
				value: "#ff7d5e"
			}
		}
  })
})()
</script>

<style is:global>
	::selection {
		background-color: #ffffff45;
	}
	html {
		font-family: 'Satoshi', sans-serif;
		background-color: #000;
	}
  .tippy-box[data-theme='default'] {
    background-color: rgb(177, 177, 177) !important;
    color: #000 !important;
    font-family: sans-serif !important;
  }
	.tippy-arrow {
    color: rgb(177, 177, 177) !important;
	}
	.gradient-text {
		margin: 0;
		background: radial-gradient(104.58% 104.45% at 18.91% 52.2%, rgba(255, 199, 0, 0.2) 0%, rgba(255, 199, 0, 0) 100%),
			radial-gradient(96.22% 70.96% at 70.08% 82.42%, rgba(255, 4, 4, 0.2) 0%, rgba(0, 0, 0, 0) 100%), 
			radial-gradient(110.73% 50% at 50% 0%, #FF3100 0%, rgba(255, 255, 255, 0) 100%), #FFFBF4;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}
</style>
