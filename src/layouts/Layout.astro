---
import { Tooltips } from 'astro-tooltips';

const title = "Ricafolio"
const pageTitle = "ricafolio.me | web developer"
const description = "Hi! ðŸ‘‹ I'm Rica, a web designer & developer, passionate about creating visually stunning and user-friendly websites"
const url = "https://ricafolio.me"
const fontshareUrl = "https://api.fontshare.com"
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="title" content={title}>
		<meta name="description" content={description}>
		<meta property="og:type" content="website">
		<meta property="og:title" content={title}/>
		<meta name="og:description" content={description}>
		<meta property="og:image" content="/og_img.png">
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:site" content={url}>
  	<meta name="twitter:url" content={url}>
		<meta name="twitter:title" content={title}>
		<meta name="twitter:description" content={description}>
		<link rel="preconnect" href={fontshareUrl} />
		<link rel="dns-prefetch" href={fontshareUrl} />
		<link href="https://api.fontshare.com/v2/css?f[]=clash-display@700,600&f[]=satoshi@700,500,400&display=swap" rel="stylesheet">
		<Tooltips interactive={false} delay={[1, 10]} placement="top" />
		<title>{pageTitle}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	::selection {
		background-color: #ffffff45;
	}
	html {
		font-family: 'Clash Display', sans-serif;
		background-color: #000;
		overflow-y: hidden;
	}
  .tippy-box[data-theme='default'] {
    background-color: rgb(177, 177, 177) !important;
    color: #000 !important;
    font-family: sans-serif !important;
  }
	.tippy-arrow {
    color: rgb(177, 177, 177) !important;
	}
</style>
