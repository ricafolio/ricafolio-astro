---
import { Tooltips } from 'astro-tooltips';

export interface Props {
	title: string;
	pageTitle: string;
	description: string;
}

const { title, pageTitle, description } = Astro.props;
const url = "https://ricafolio.me"
const fontshareUrl = "https://api.fontshare.com"
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="title" content={title}>
		<meta name="description" content={description}>
		<meta property="og:type" content="website">
		<meta property="og:title" content={title}/>
		<meta name="og:description" content={description}>
		<meta property="og:image" content="/og_img.png">
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:site" content={url}>
  	<meta name="twitter:url" content={url}>
		<meta name="twitter:title" content={title}>
		<meta name="twitter:description" content={description}>
		<link rel="preconnect" href={fontshareUrl} />
		<link rel="dns-prefetch" href={fontshareUrl} />
		<link href="https://api.fontshare.com/v2/css?f[]=clash-display@700&display=swap" rel="stylesheet">
		<Tooltips interactive={false} delay={[1, 10]} placement="top" />
		<title>{pageTitle}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	::selection {
		background-color: #fffeed26;
	}
	html {
		font-family: 'Clash Display', sans-serif;
		background-color: #000;
		overflow-y: hidden;
	}
  .tippy-box[data-theme='default'] {
    background-color: rgb(122, 122, 122) !important;
    color: #000 !important;
    font-family: sans-serif !important;
  }
</style>
