---
import Layout from '../layouts/Layout.astro';
import LinkBar from '../components/LinkBar.astro';
---

<Layout title="Ricafolio" pageTitle="ricafolio.me | web developer" description="Hi! ðŸ‘‹ I'm Rica, a web designer & developer | Passionate about creating visually stunning and user-friendly websites">
	<main>
		<div class="flex-center">
			<h1>Ricafolio</h1>
			<h2>Front-end Developer</h2>
			<LinkBar />
		</div>
	</main>
</Layout>

<style>
	main {
		color: white;
		margin: auto;
		height: 80vh;
		padding: 1.5rem;
		max-width: 60ch;
	}
	h1 {
		font-size: 7rem;
		font-weight: 800;
		margin: 0;
		background: radial-gradient(104.58% 104.45% at 18.91% 52.2%, rgba(255, 199, 0, 0.2) 0%, rgba(255, 199, 0, 0) 100%), radial-gradient(96.22% 70.96% at 70.08% 82.42%, rgba(130, 4, 255, 0.2) 0%, rgba(0, 0, 0, 0) 100%), radial-gradient(110.73% 50% at 50% 0%, #FD8AFF 0%, rgba(255, 255, 255, 0) 100%), #FFFBF4;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}
	h2 {
		font-family: 'Satoshi', sans-serif;
		font-weight: 400;
		color: rgb(169, 163, 168);
	}
	.flex-center {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		height: 100%;
	}
	@media screen and (max-width: 1024px) {
		h1 {
			font-size: 6rem;
		}
	}
	@media screen and (max-width: 768px) {
		h1 {
			font-size: 5rem;
		}
	}
	@media screen and (max-width: 640px) {
		h1 {
			font-size: 4rem;
		}
	}
</style>
