---
import Layout from '../layouts/Layout.astro';
import NavBar from '../components/NavBar.astro';
---

<Layout doIndex={false}>
	<div class="text-white">
    <NavBar page="projects" />
    
    <!-- BODY -->
		<main class="container mx-auto flex flex-col mt-16">
			<div class="w-5/6 md:w-4/6 mx-auto flex flex-col align-center">
				<h1 class="text-4xl font-clash">Projects</h1>
        
        <section class="flex flex-col md:flex-row w-full my-12">
          <div class="w-full md:w-3/6 mb-6 md:mb-0">
            <img src="/img/mml.png" alt="MyManhwaList" class="rounded" />
          </div>
          <div class="w-full md:w-3/6 px-0 md:px-6 flex flex-col justify-center">
            <div>
              <small class="block text-sm mb-1 font-semibold uppercase text-pink-500">In progress</small>
              <h2 class="text-3xl font-clash">MyManhwaList</h2>
              <p class="text-xl text-zinc-300">Discover Manhwa reading lists</p>
            </div>
            <div class="mt-1 mb-3">
              <span class="inline-block bg-zinc-800 rounded py-3 px-5 mt-1">Next.js</span>
              <span class="inline-block bg-zinc-800 rounded py-3 px-5 mt-1">Strapi</span>
              <span class="inline-block bg-zinc-800 rounded py-3 px-5 mt-1">Tailwind CSS</span>
            </div>
            <div>
              <a href="https://mymanhwalist-next.vercel.app" target="_blank" rel="nofollow" class="inline-block border border-zinc-800 hover:border-zinc-400 ease-in duration-150 rounded py-3 px-5">
                <span class="flex items-center justify-center">
                  <span>Live demo</span>
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="16" height="16" class="ml-2"><path fill="none" d="M0 0h24v24H0z"/><path d="M10 6v2H5v11h11v-5h2v6a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1h6zm11-3v8h-2V6.413l-7.793 7.794-1.414-1.414L17.585 5H13V3h8z" fill="rgba(236,240,241,1)"/></svg>
                </span>
              </a>
            </div>
          </div>
        </section>

        <section class="flex flex-col md:flex-row w-full my-12">
          <div class="w-full md:w-3/6 mb-6 md:mb-0">
            <img src="/img/chef.png" alt="Chef" class="rounded" />
          </div>
          <div class="w-full md:w-3/6 px-0 md:px-6 flex flex-col justify-center">
            <div>
              <h2 class="text-3xl font-clash">Chef</h2>
              <p class="text-xl text-zinc-300">Responsive landing page</p>
            </div>
            <div class="mt-1 mb-3">
              <span class="inline-block bg-zinc-800 rounded py-3 px-5 mt-1">HTML</span>
              <span class="inline-block bg-zinc-800 rounded py-3 px-5 mt-1">CSS</span>
              <span class="inline-block bg-zinc-800 rounded py-3 px-5 mt-1">jQuery</span>
              <span class="inline-block bg-zinc-800 rounded py-3 px-5 mt-1">Jekyll</span>
            </div>
            <div>
              <a href="https://usechef.com/" target="_blank" rel="nofollow" class="inline-block border border-zinc-800 hover:border-zinc-400 ease-in duration-150 rounded py-3 px-5">
                <span class="flex items-center justify-center">
                  <span>Live demo</span>
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="16" height="16" class="ml-2"><path fill="none" d="M0 0h24v24H0z"/><path d="M10 6v2H5v11h11v-5h2v6a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1h6zm11-3v8h-2V6.413l-7.793 7.794-1.414-1.414L17.585 5H13V3h8z" fill="rgba(236,240,241,1)"/></svg>
                </span>
              </a>
            </div>
          </div>
        </section>

        <section class="flex flex-col md:flex-row w-full my-12">
          <div class="w-full md:w-3/6 mb-6 md:mb-0">
            <img src="/img/bot.png" alt="Bot" class="rounded" />
          </div>
          <div class="w-full md:w-3/6 px-0 md:px-6 flex flex-col justify-center">
            <div>
              <small class="block text-sm font-semibold mb-1 uppercase text-red-800">Demo offline</small>
              <h2 class="text-3xl font-clash">Premint Links Discord Bot</h2>
              <p class="text-xl text-zinc-300">Bot that scrapes latest premint links shared across Twitter</p>
            </div>
            <div class="mt-1 mb-3">
              <span class="inline-block bg-zinc-800 rounded py-3 px-5 mt-1">Discord.js</span>
              <span class="inline-block bg-zinc-800 rounded py-3 px-5 mt-1">Node.js</span>
              <span class="inline-block bg-zinc-800 rounded py-3 px-5 mt-1">Twitter API</span>
            </div>
            <div>
              <a href="https://top.gg/bot/1006311461175443526" target="_blank" rel="nofollow" class="inline-block border border-zinc-800 hover:border-zinc-400 ease-in duration-150 rounded py-3 px-5">
                <span class="flex items-center justify-center">
                  <span>Live demo</span>
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="16" height="16" class="ml-2"><path fill="none" d="M0 0h24v24H0z"/><path d="M10 6v2H5v11h11v-5h2v6a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1h6zm11-3v8h-2V6.413l-7.793 7.794-1.414-1.414L17.585 5H13V3h8z" fill="rgba(236,240,241,1)"/></svg>
                </span>
              </a>
            </div>
          </div>
        </section>

        <section class="flex flex-col md:flex-row w-full mt-12 mb-32">
          <div class="w-full md:w-3/6 mb-6 md:mb-0">
            <img src="/img/cult.png" alt="NFT Referral" class="rounded" />
          </div>
          <div class="w-full md:w-3/6 px-0 md:px-6 flex flex-col justify-center">
            <div>
              <small class="block text-sm font-semibold mb-1 uppercase text-red-800">Demo offline</small>
              <h2 class="text-3xl font-clash">NFT Referral</h2>
              <p class="text-xl text-zinc-300">Referral campaign system for NFT project</p>
            </div>
            <div class="mt-1 mb-3">
              <span class="inline-block bg-zinc-800 rounded py-3 px-5 mt-1">Nuxt.js</span>
              <span class="inline-block bg-zinc-800 rounded py-3 px-5 mt-1">Strapi</span>
              <span class="inline-block bg-zinc-800 rounded py-3 px-5 mt-1">Twitter OAuth</span>
            </div>
            <div>
              <a href="https://twitter.com/search?q=cultofeth.xyz&src=typed_query&f=live" target="_blank" rel="nofollow" class="inline-block border border-zinc-800 hover:border-zinc-400 ease-in duration-150 rounded py-3 px-5">
                <span class="flex items-center justify-center">
                  <span>See campaign results</span>
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="16" height="16" class="ml-2"><path fill="none" d="M0 0h24v24H0z"/><path d="M10 6v2H5v11h11v-5h2v6a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1h6zm11-3v8h-2V6.413l-7.793 7.794-1.414-1.414L17.585 5H13V3h8z" fill="rgba(236,240,241,1)"/></svg>
                </span>
              </a>
            </div>
          </div>
        </section>
			</div>
		</main>
  </div>
</Layout>
