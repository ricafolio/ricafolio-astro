---
interface Props {
  page: "about" | "projects" | "uses"
}

const { page } = Astro.props

const activeClass = "font-bold text-black active:text-zinc-800 focus:text-zinc-900"
const inactiveClass = "text-zinc-600 hover:text-black active:text-zinc-800 focus:text-zinc-900"
---

<header class="flex justify-center text-sm sm:text-base mt-1">
  <div class="flex border-2 border-zinc-800 bg-amber-50 drop-shadow-[0px_5px_#000] rounded-full">
    <a
      href="/"
      class:list={[
        "px-8 py-5 ease rounded-l-full",
        page === "about" ? activeClass : inactiveClass,
      ]}
    >
      About
    </a>
    <a
      href="/projects"
      class:list={[
        "px-8 py-5 ease rounded-l-full",
        page === "projects" ? activeClass : inactiveClass,
      ]}
    >
      Projects
    </a>
    <a
      href="/uses"
      class:list={[
        "px-8 py-5 ease rounded-l-full",
        page === "uses" ? activeClass : inactiveClass,
      ]}
    >
      Uses
    </a>
  </div>
</header>
